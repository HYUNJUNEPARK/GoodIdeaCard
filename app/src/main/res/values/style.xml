<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="text_match_wrap_standard_size_pad_14dp_20dp_day_night_setting_title">
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:paddingHorizontal">14dp</item>
        <item name="android:paddingVertical">20dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/standard_text_size_12sp</item>
        <item name="android:drawablePadding">14dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/day_night_mode_black_ff000000_white_ffffffff</item>
    </style>

    <style name="division_horiz_weak_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/day_night_mode_white_fafafa_back_1c1c1c</item>
    </style>

    <style name="division_horiz_toolbar_bottom_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/day_night_gray_d1d1d1_gray_424141</item>
    </style>

    <style name="scroll_view_match_pad_14dp">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:padding">14dp</item>
    </style>

    <style name="group_radio_ori_vert">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="radio_btn_app_theme_standard_size">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/standard_text_size_12sp</item>
        <item name="android:buttonTint">@color/app_theme</item>
    </style>
</resources>