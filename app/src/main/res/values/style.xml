<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="text_match_wrap_standard_size_pad_14dp_20dp_day_night_setting_title">
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:paddingHorizontal">14dp</item>
        <item name="android:paddingVertical">20dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/standard_text_size_12sp</item>
        <item name="android:drawablePadding">14dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/day_night_black_ff000000_white_ffffffff</item>
    </style>

    <style name="division_horiz_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/day_night_gray_d1d1d1_gray_424141</item>
    </style>

    <style name="division_horiz_weak_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/day_night_white_fafafa_back_1c1c1c</item>
    </style>

    <style name="division_horiz_toolbar_bottom_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/day_night_gray_d1d1d1_gray_424141</item>
    </style>

    <style name="division_vert_line">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/day_night_gray_d1d1d1_gray_424141</item>
    </style>

    <style name="scroll_view_match_pad_14dp">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:padding">14dp</item>
    </style>

    <style name="group_radio_ori_vert">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="radio_btn_app_theme_standard_size">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/standard_text_size_12sp</item>
        <item name="android:buttonTint">@color/app_theme</item>
    </style>

    <style name="popup_menu_text_style_16dp_bold">
        <item name="android:textSize">16dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_standard_size_bold_day_night">
        <item name="android:textSize">@dimen/standard_text_size_12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/day_night_black_ff000000_white_ffffffff</item>
    </style>

    <style name="text_match_wrap_standard_size_day_night">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">@dimen/standard_text_size_12sp</item>
        <item name="android:paddingVertical">15dp</item>
        <item name="android:textColorHint">@color/gray_555555</item>
        <item name="android:textColor">@color/day_night_black_ff000000_white_ffffffff</item>
    </style>

    <style name="button_app_them_radius_10dp">
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:textSize">@dimen/button_text_size_14dp</item>
        <item name="android:backgroundTint">@color/app_theme</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="cornerRadius">10dp</item>
    </style>

    <style name="custom_edit_text_view_max_line_1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColorHint">@color/gray_555555</item>
        <item name="android:textSize">@dimen/standard_text_size_12sp</item>
        <item name="android:paddingVertical">15dp</item>
        <item name="android:textColor">@color/day_night_black_ff000000_white_ffffffff</item>
    </style>

    <style name="MyAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:textSize">@dimen/standard_text_size_12sp</item>
    </style>

    <style name="button_borderless" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/button_text_size_14dp</item>
        <item name="android:textColor">@color/day_night_black_ff000000_white_ffffffff</item>
    </style>

    <style name="text_standard_size_margin_horiz_18dp_day_night">
        <item name="android:textSize">@dimen/standard_text_size_12sp</item>
        <item name="android:layout_marginHorizontal">18dp</item>
        <item name="android:textColor">@color/day_night_black_ff000000_white_ffffffff</item>
    </style>


    <style name="default_button_text_12dp_black">
        <item name="android:textSize">12dp</item>
        <item name="android:backgroundTint">@color/app_theme</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:paddingVertical">10dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
    </style>

    <style name="main_card_view_style">
        <item name="android:layout_width">275dp</item>
        <item name="android:layout_height">448dp</item>
        <item name="cardCornerRadius">20dp</item>
        <item name="cardElevation">2dp</item>
    </style>

    <style name="default_fab_size_62dp">
        <item name="android:layout_width">62dp</item>
        <item name="android:layout_height">62dp</item>
        <item name="android:background">@drawable/bg_oval_app_theme</item>
        <item name="android:padding">8dp</item>
        <item name="android:elevation">4dp</item>
    </style>

</resources>