<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.GoodIdeaCard" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@android:color/white</item>
        <!-- Customize your theme here. -->
        <item name="android:windowLightStatusBar">true</item>

        <!-- EditText 등 기본 컴포넌트 색상 적용 -->
        <item name="colorAccent">@color/app_theme</item>

        <!-- Default background color setting cf. 설정 안하면, 뷰에 기본적으로 연보라색이 들어가게 됨-->
        <item name="android:colorBackground">@android:color/white</item>
    </style>

    <style name="Theme.GoodIdeaCard" parent="Base.Theme.GoodIdeaCard" />

    <style name="Fullscreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:navigationBarColor">@color/app_theme</item>
    </style>

    <style name="FullScreenDialogThemeTransparent" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:statusBarColor">@color/day_night_white_ffffffff_black_191919</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="colorAccent">@color/app_theme</item>
    </style>

    <style name="DialogTheme" parent="android:Theme.Holo.Light.Dialog.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
        <item name="android:background">@drawable/bg_square_rad_8dp_white_black</item>
        <item name="colorAccent">@color/app_theme</item>
    </style>

    <style name="text_standard_size_bold_pad_vert_10dp_day_night">
        <item name="android:textSize">@dimen/standard_text_size_12sp</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingVertical">10dp</item>
        <item name="android:textColor">@color/day_night_black_ff000000_white_ffffffff</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>