<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.GoodIdeaCard" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white_ffffffff</item>
        <!-- Customize your theme here. -->
        <item name="android:windowLightStatusBar">true</item>

        <!-- Default background color setting cf. 설정 안하면, 뷰에 기본적으로 연보라색이 들어가게 됨-->
        <item name="android:colorBackground">@color/white_ffffffff</item>
    </style>

    <style name="Theme.GoodIdeaCard" parent="Base.Theme.GoodIdeaCard" />

    <style name="Fullscreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:navigationBarColor">@color/app_theme</item>
    </style>

    <style name="FullScreenDialogThemeTransparent" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:statusBarColor">@color/day_night_mode_white_ffffffff_black_191919</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

</resources>