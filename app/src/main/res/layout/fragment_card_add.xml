    <androidx.cardview.widget.CardView
        style="@style/main_card_view_style"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            android:padding="18dp">

            <EditText
                android:id="@+id/card_add_content"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginBottom="18dp"
                android:background="@android:color/transparent"
                android:ellipsize="end"
                android:gravity="center"
                android:hint="@string/msg_input_content"
                android:maxLines="10"
                android:textColor="@android:color/black"
                android:textColorHint="@color/gray_d1d1d1"
                android:textSize="18dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/card_add_sub_content"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:ellipsize="end"
                android:gravity="end"
                android:hint="@string/msg_input_content"
                android:textColor="@android:color/black"
                android:textColorHint="@color/gray_d1d1d1"
                android:textSize="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/card_add_fab"
        android:layout_width="62dp"
        android:layout_height="62dp"
        android:layout_margin="20dp"
        android:background="@drawable/bg_oval_app_theme"
        android:padding="8dp"
        android:src="@drawable/ic_add_24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>